{
  "name": "@dumber-dungeons/server",
  "module": "src/main.ts",
  "type": "module",
  "license": "GPL-3.0-only",
  "version": "0.0.1",
  "scripts": {
    "start": "NEST_DEBUG=true bun ./src/main.ts",
    "start:dev": "NEST_DEBUG=true bun --watch ./src/main.ts",
    "start:debug": "NEST_DEBUG=true bun --debug --watch ./src/main.ts",
    "start:prod": "bun ./src/main.ts",
    "test": "bun test test/spec",
    "test:watch": "bun test test/spec --watch",
    "test:cov": "bun test test/spec --coverage",
    "test:debug": "bun test test/spec --inspect-brk",
    "test:e2e": "bun test test/e2e",
    "format:check": "prettier . --check --ignore-path ../../.gitignore",
    "lint:check": "eslint .",
    "type:check": "tsc",
    "format:fix": "prettier . --write --ignore-path ../../.gitignore",
    "lint:fix": "eslint . --fix",
    "lint:inspect": "eslint --inspect-config"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bun": "latest",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/node": "^20.3.1",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.4.0",
    "prettier": "3.3.3",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "nanoid": "^5.0.9",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "@dumber-dungeons/shared": "workspace:*"
  }
}
