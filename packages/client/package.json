{
  "name": "@dumber-dungeons/client",
  "module": "src/main.ts",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "bunx http-server public/",
    "build": "bun build src/threejs.ts --outdir public/build/",
    "build:dev": "bun build --watch src/threejs.ts --outdir public/build/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "bun test src",
    "test:watch": "bun test src --watch",
    "test:cov": "bun test src --coverage",
    "test:debug": "bun test src --inspect-brk",
    "test:e2e": "bun test test/e2e"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/bun": "latest",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/three": "^0.170.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.4.0",
    "prettier": "3.3.3",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "three": "^0.170.0"
  }
}
