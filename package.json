{
  "name": "dumber-dungeons",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"packages/*/test/**/*.ts\"",
    "format:check": "prettier \"packages/*/src/**/*.ts\" \"packages/*/test/**/*.ts\"",
    "lint": "eslint -c packages/shared/eslint.config.mjs \"packages/*/{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:inspect": "eslint -c packages/shared/eslint.config.mjs --inspect-config"
  },
  "workspaces": [
    "packages/*"
  ]
}
